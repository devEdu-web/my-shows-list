<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/30222b3036.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/userLists.css">
    <title>MyShowsList</title>
</head>
<body>
    <header class="mb-3">
        <%- include('./templates/navigation') %> 
    </header>

    <main class="container container-fluid p-3 d-flex flex-wrap gap-3 justify-content-center">
        <% showsList.forEach(show => { %> 
            <div class="card text-white">
                <img class="card-img" src="<%= `${posterPathUrl}/${show.posterPath}` %>" alt="">
    
                <div class="card-img-overlay p-0 d-flex flex-column justify-content-end gap-1">
                    <div class="overlay-content p-2 fw-bold d-flex justify-content-between align-items-center">
                        <div class="user-score">
                            <i class="fa-solid fa-star"></i>
                            <span><%= show.userScore %></span>
                        </div>
                        <small class="">
                            <a href="" class="link-light">Edit</a>
                        </small>
                    </div>
                </div>
            </div>
        <% }) %> 
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>